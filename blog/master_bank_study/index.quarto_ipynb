        "\\draw[->] (X1) -- (X2) node[midway, above] {$\\theta_{12}$};\n",
        "\\draw[->] (X1) -- (X3) node[midway, left] {$\\theta_{13}$};\n",
        "\\draw[->] (X3) -- (X4) node[midway, left] {$\\theta_{34}$};\n",
        "\\draw[->] (X2) -- (X4) node[midway, right] {$\\theta_{24}$};\n",
